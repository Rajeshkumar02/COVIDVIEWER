<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!--Linear Layout to display all the details-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!--Text view to display India stats-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="45dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />


        <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/india" />


        <!--Text view to display Total Cases-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="Total Cases:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvCases"
            android:textAlignment="center"
            android:textSize="41sp"
            android:textColor="#aaa"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal" />

        <!--Text view to display Recovered Cases-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Recovered Cases:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvRecovered"
            android:textAlignment="center"
            android:textSize="41sp"
            android:textColor="#8ACA2B"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Total Deaths:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvTotalDeaths"
            android:textAlignment="center"
            android:textSize="41sp"
            android:textColor="@color/color_one"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Active Cases:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvActive"
            android:textAlignment="center"
            android:textSize="38sp"
            android:textColor="#696969"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal" />

        <!--Text view to display Critical Cases-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Critical Cases:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvCritical"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textColor="#696969"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <!--Text view to display Active Cases-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal" />



        <!--Text view to display Today Cases-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Today Cases:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

        <!--Text view to display the updated number when data
        will fetch from the API. For now default set to 0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvTodayCases"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textColor="#aaa"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <!--Text view to display Total Deaths-->


        <!--Text view to display Affected Countries-->
        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="HOME"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_marginTop="-50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:text="WEB"
            android:textColor="@color/black" />




    </LinearLayout>

</ScrollView>
